# MCLI ML System Environment Configuration
# This file contains ML-specific environment variables
# Required only if using mcli[ml] extras
# Copy to .env.ml and fill in your values

# =============================================================================
# ML DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database for ML
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ml_system
DB_USER=ml_user
DB_PASSWORD=your_db_password_here

# =============================================================================
# MLFLOW CONFIGURATION
# =============================================================================

# MLflow Tracking
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=politician_trading
# MLFLOW_USERNAME=
# MLFLOW_PASSWORD=

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Training Parameters
MODEL_BATCH_SIZE=32
MODEL_LEARNING_RATE=0.001
MODEL_EPOCHS=100
MODEL_DEVICE=auto  # auto, cpu, cuda, mps
MODEL_NUM_WORKERS=4

# Model Serving
MODEL_SERVING_HOST=0.0.0.0
MODEL_SERVING_PORT=8001

# =============================================================================
# DATA PIPELINE CONFIGURATION
# =============================================================================

# Data Processing
DATA_CHUNK_SIZE=10000
DATA_MAX_FILE_SIZE=104857600  # 100MB
DVC_REMOTE=local  # local, s3, gcs

# =============================================================================
# ML API CONFIGURATION
# =============================================================================

API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=1
API_SECRET_KEY=change-this-to-a-random-secret
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30
API_RATE_LIMIT=100

# =============================================================================
# FINANCIAL DATA API KEYS
# =============================================================================

# Alpha Vantage
# API_ALPHA_VANTAGE_KEY=your_alpha_vantage_key

# Polygon.io
# API_POLYGON_KEY=your_polygon_key

# Quiver Quantitative
# API_QUIVER_KEY=your_quiver_key

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

MONITORING_METRICS_PORT=9090
MONITORING_ENABLE_METRICS=true
MONITORING_LOG_LEVEL=INFO
MONITORING_LOG_FORMAT=structured
MONITORING_ENABLE_ALERTS=false
# MONITORING_ALERT_WEBHOOK_URL=
MONITORING_DRIFT_CHECK_INTERVAL=3600  # seconds
MONITORING_DRIFT_THRESHOLD=0.05

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

SECURITY_ENABLE_AUTH=true
SECURITY_ADMIN_USERNAME=admin
SECURITY_ADMIN_PASSWORD=change_me_in_production
# SECURITY_SSL_CERT_PATH=
# SECURITY_SSL_KEY_PATH=
SECURITY_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# =============================================================================
# CLOUD STORAGE (AWS S3)
# =============================================================================

# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_S3_BUCKET=ml-models-bucket

# =============================================================================
# STREAMING (KAFKA)
# =============================================================================

# KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# KAFKA_TOPIC_PREFIX=ml_system
# KAFKA_GROUP_ID=ml_processor

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# PyTorch/NumPy Threading
PYTORCH_NUM_THREADS=4
OMP_NUM_THREADS=4
MKL_NUM_THREADS=4

# =============================================================================
# NOTES
# =============================================================================
#
# 1. This file is for ML-specific features only
# 2. Start with database and MLflow configuration
# 3. Add financial API keys as needed
# 4. Configure cloud storage for production deployments
# 5. Adjust threading parameters based on your CPU
# 6. Use strong passwords and secrets in production
# 7. Enable monitoring in production
# 8. Configure CORS origins for your domains
#
