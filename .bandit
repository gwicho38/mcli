[bandit]
# Bandit security linter configuration

# Directories to exclude from scanning
exclude_dirs = [
    ".venv",
    "venv",
    ".env",
    "env",
    "build",
    "dist",
    "*.egg-info",
    ".tox",
    ".pytest_cache",
    "tests",
    "docs",
    "scripts",
    "node_modules",
    ".git",
    "__pycache__"
]

# Tests to skip (by test ID) - These are acceptable in this codebase context
skips = [
    "B101",  # Test for use of assert
    "B102",  # exec_used - required for dynamic command loading
    "B104",  # hardcoded_bind_all_interfaces - acceptable for development servers
    "B108",  # hardcoded_tmp_directory - acceptable usage patterns
    "B113",  # request_without_timeout - handled by application logic/daemon
    "B310",  # urllib_urlopen - required for remote mcli functionality
    "B301",  # pickle - used internally for caching (trusted data)
    "B306",  # mktemp - acceptable for temporary file creation
    "B324",  # hashlib_md5 - used for non-security fingerprinting
    "B604",  # any_other_function_with_shell_equals_true - controlled usage
    "B605",  # start_process_with_a_shell - controlled usage for clearing screen
]

# Confidence levels: LOW, MEDIUM, HIGH
confidence = "HIGH"

# Severity levels: LOW, MEDIUM, HIGH
severity = "MEDIUM"

# Include only specific test IDs (if needed)
# tests = ["B201", "B301"]

# Output format: csv, json, txt, xml, yaml
format = "txt"

# Show only issues with high confidence
# exclude_low_confidence = true
