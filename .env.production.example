# MCLI Production Environment Configuration
# Use this as a template for production deployments
# Copy to .env.production and secure appropriately

# =============================================================================
# PRODUCTION ENVIRONMENT
# =============================================================================

MCLI_ENV=production
DEBUG=false

# =============================================================================
# SECURITY - CRITICAL
# =============================================================================

# Generate strong random secrets
API_SECRET_KEY=CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-IN-PRODUCTION
SECURITY_ADMIN_PASSWORD=CHANGE-THIS-IN-PRODUCTION

# SSL/TLS Configuration
# SECURITY_SSL_CERT_PATH=/path/to/cert.pem
# SECURITY_SSL_KEY_PATH=/path/to/key.pem

# =============================================================================
# API KEYS - KEEP SECURE
# =============================================================================

# OpenAI
OPENAI_API_KEY=${OPENAI_API_KEY}  # Use secrets management

# Anthropic
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# Supabase
SUPABASE_URL=${SUPABASE_URL}
SUPABASE_SERVICE_ROLE_KEY=${SUPABASE_SERVICE_ROLE_KEY}

# =============================================================================
# DATABASE - PRODUCTION
# =============================================================================

# Use connection pooling and read replicas in production
DATABASE_URL=${DATABASE_URL}
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# =============================================================================
# REDIS - PRODUCTION
# =============================================================================

REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0
REDIS_SSL=true

# =============================================================================
# MONITORING - REQUIRED
# =============================================================================

MONITORING_ENABLE_METRICS=true
MONITORING_LOG_LEVEL=INFO
MONITORING_ENABLE_ALERTS=true
MONITORING_ALERT_WEBHOOK_URL=${SLACK_WEBHOOK_URL}

# Sentry (optional)
# SENTRY_DSN=${SENTRY_DSN}

# Datadog (optional)
# DD_API_KEY=${DD_API_KEY}
# DD_APP_KEY=${DD_APP_KEY}

# =============================================================================
# PERFORMANCE
# =============================================================================

MCLI_AUTO_OPTIMIZE=true
MCLI_PARALLEL_WORKERS=8
MCLI_AGGRESSIVE_CACHE=true

# API Server
MCLI_API_SERVER=true
MCLI_API_HOST=0.0.0.0
MCLI_API_PORT=8080
API_WORKERS=4

# =============================================================================
# CORS - RESTRICT IN PRODUCTION
# =============================================================================

SECURITY_CORS_ORIGINS=["https://yourdomain.com","https://app.yourdomain.com"]

# =============================================================================
# CLOUD STORAGE
# =============================================================================

AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=${S3_BUCKET_NAME}

# =============================================================================
# NOTES FOR PRODUCTION
# =============================================================================
#
# SECURITY CHECKLIST:
# ✓ Change all default passwords and secrets
# ✓ Use environment variable substitution (${VAR})
# ✓ Store secrets in AWS Secrets Manager, HashiCorp Vault, etc.
# ✓ Enable SSL/TLS
# ✓ Restrict CORS origins
# ✓ Enable authentication
# ✓ Set DEBUG=false
# ✓ Configure monitoring and alerts
# ✓ Use database connection pooling
# ✓ Enable Redis SSL
# ✓ Set appropriate file permissions (chmod 600)
# ✓ Never commit this file with real credentials
#
# DEPLOYMENT:
# 1. Use a secrets management system
# 2. Inject environment variables at runtime
# 3. Rotate credentials regularly
# 4. Monitor for suspicious activity
# 5. Keep dependencies updated
# 6. Regular security audits
#
