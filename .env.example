# MCLI Core Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file with real credentials

# =============================================================================
# REQUIRED: BASIC SETUP
# =============================================================================
# These are needed for core MCLI functionality

# Application Environment (development, staging, production)
MCLI_ENV=development

# Debug mode (true/false)
DEBUG=false

# =============================================================================
# OPTIONAL: CHAT & AI FEATURES
# =============================================================================
# Required only if using mcli[chat] extras

# OpenAI API Key (for GPT models)
# OPENAI_API_KEY=sk-...

# Anthropic API Key (for Claude)
# ANTHROPIC_API_KEY=sk-ant-...

# Ollama Configuration (for local models)
# OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# OPTIONAL: DATABASE FEATURES
# =============================================================================
# Required only if using mcli[database] extras

# Supabase Configuration (for politician trading, data storage)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key-here
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# PostgreSQL (alternative to Supabase)
# DATABASE_URL=postgresql://user:password@localhost:5432/mcli

# =============================================================================
# OPTIONAL: REDIS CACHE
# =============================================================================
# Required only if using mcli[async-extras] with Redis

# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# =============================================================================
# OPTIONAL: PERFORMANCE TUNING
# =============================================================================

# Auto-optimize performance (true/false)
# MCLI_AUTO_OPTIMIZE=true

# Debug and tracing
# MCLI_TRACE_LEVEL=0  # 0=off, 1=basic, 2=detailed, 3=verbose
# MCLI_SHOW_PERFORMANCE_SUMMARY=false

# Memory settings
# MCLI_LOW_MEMORY=false  # Enable for constrained environments
# MCLI_LARGE_CACHE=false  # Enable for high-memory systems

# Parallel processing
# MCLI_PARALLEL_WORKERS=4  # Auto-detected if not set

# =============================================================================
# OPTIONAL: API/DAEMON CONFIGURATION
# =============================================================================
# For running MCLI as a service

# API Server
# MCLI_API_SERVER=false
# MCLI_API_HOST=localhost
# MCLI_API_PORT=8080

# Daemon
# MCLI_DAEMON_ROUTING=false
# MCLI_API_DAEMON_ENABLED=false
# MCLI_API_DAEMON_AUTO_START=false

# =============================================================================
# OPTIONAL: DEVELOPMENT SETTINGS
# =============================================================================

# Plugin path
# MCLI_PLUGIN_PATH=/path/to/plugins

# Config file path
# MCLI_CONFIG=/path/to/config.toml

# Python optimization level
# PYTHONOPTIMIZE=0

# =============================================================================
# NOTES
# =============================================================================
#
# 1. Only uncomment variables you need
# 2. Start with just MCLI_ENV and DEBUG
# 3. Add API keys only when using chat/AI features
# 4. Use separate .env files for different environments:
#    - .env (local development)
#    - .env.production (production)
#    - .env.ml (ML-specific features)
#
# 5. Boolean values: use "true"/"false" or "1"/"0"
#
# 6. Never commit .env files with real credentials
#
# 7. Restart mcli after changing environment variables
#
# 8. For ML features, see .env.ml.example
#
