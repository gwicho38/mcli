[flake8]
# Configuration for flake8 linting tool
# Pragmatic settings focused on catching critical issues only

max-line-length = 120

# Only check critical pyflakes and syntax errors
# Format: codes on single line, no inline comments
select = F821,F841,E711,E712,E721,E902,E999

# Directories and files to exclude from linting
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    migrations,
    .coverage,
    htmlcov,
    docs/_build,
    node_modules,
    .mypy_cache,
    examples,
    docs/examples,
    streamlit_*.py

filename = *.py

per-file-ignores =
    */__init__.py:F401,F403,F405,F821,F841
    tests/*:F401,F811,F821,F841
    scripts/*:F401,F821,F841

show-source = True
statistics = True
count = True
